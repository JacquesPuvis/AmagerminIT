@page
@using AmagerminIT.Models
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject UserManager<User> UserManager

@model AmagerminIT.Pages.Achievements.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "Shared/_Layout";
}

<h1>Achievements</h1>
<p>
    See a list of all the achievements!
</p>

<table class="table">
    
    <tbody>
    <div class="card shadow-sm border-primary mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <span>All Achievements</span>
        </div>
        <div class="card-body">
            @if (Model.Achievements != null && Model.Achievements.Count > 0)
            {
                <ul class="list-group list-group-flush">
                    @foreach (var achievement in Model.Achievements)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>
                                <strong>@achievement.Name</strong> - @achievement.Description
                            </span>
                            <a asp-page="/Achievements/Edit" asp-route-id="@achievement.AchievementId" class="btn btn-sm btn-outline-primary">Edit</a>
                        </li>
                    }
                </ul>

            }
            else
            {
                <div class="alert alert-info">No achievements found.</div>
            }
        </div>
    </div>

    </tbody>
</table>
