@page "/Admin"
@model AmagerminIT.Pages.AdminModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Admin Dashboard</h2>

    <div class="card shadow-sm border-primary mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <span>Recent Achievements</span>
            <a class="btn btn-light btn-sm" asp-page="/Achievements/Create">+ Create New</a>
        </div>
        <div class="card-body">
            @if (Model.Achievements != null && Model.Achievements.Count > 0)
            {
                <ul class="list-group list-group-flush">
                    @foreach (var achievement in Model.Achievements)
                    {
                        <li class="list-group-item">
                            <strong>@achievement.Name</strong> - @achievement.Description
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="alert alert-info">No achievements found.</div>
            }
        </div>
    </div>
</div>
