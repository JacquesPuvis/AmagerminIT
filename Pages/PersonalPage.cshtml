@page "/PersonalPage"
@using AmagerminIT.Models
@model AmagerminIT.Pages.PersonalPageModel
@{
    Layout = "Shared/_Layout";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Welcome, @Model.CurrentUser.DisplayName!</h2>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    Achievements
                </div>
                <div class="card-body">
                    @if (Model.UserAchievements != null && Model.UserAchievements.Count > 0)
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var userAchievement in Model.UserAchievements)
                            {
                                <li class="list-group-item">@userAchievement.Achievement.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No achievements yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
